# Project Dharma Environment Configuration

# Application Settings
APP_NAME=Project Dharma
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DB_MONGODB_URL=mongodb://admin:password@localhost:27017
DB_MONGODB_DATABASE=dharma_platform

DB_POSTGRESQL_URL=postgresql://dharma_user:dharma_password@localhost:5432/dharma
DB_POSTGRESQL_POOL_SIZE=10

DB_ELASTICSEARCH_URL=http://localhost:9200
DB_ELASTICSEARCH_INDEX_PREFIX=dharma

REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=20

# Message Queue
KAFKA_BOOTSTRAP_SERVERS=localhost:29092

# External API Keys
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
YOUTUBE_API_KEY=your-youtube-api-key
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Notification Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Model Configuration
MODEL_CACHE_DIR=./models
SENTIMENT_MODEL_PATH=dharma-bert-sentiment
BOT_DETECTION_MODEL_PATH=bot-detection-model.pkl

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_CAMPAIGN_DETECTION=true
ENABLE_MULTI_LANGUAGE_SUPPORT=true
ENABLE_GEOLOCATION_TRACKING=false