{
  "name": "Project Dharma - Hackathon Demo Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-json",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "forwardPorts": [8501, 8080, 3000, 9090, 8088, 5432, 27017, 6379, 9200],
  "portsAttributes": {
    "8501": {
      "label": "üé™ Interactive Dashboard",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "üîß API Gateway",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "üìà Grafana Monitoring",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "üîç Prometheus",
      "onAutoForward": "ignore"
    },
    "8088": {
      "label": "‚ö° Temporal UI",
      "onAutoForward": "ignore"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "mounts": [
    "source=project-dharma-docker,target=/var/lib/docker,type=volume"
  ]
}